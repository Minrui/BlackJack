<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="庄家" android:layout_marginRight="10dip" android:id="@+id/dealer"></TextView>
<blackjack.ui.CardsView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dealer_cards_view" android:layout_below="@id/dealer"/>
<FrameLayout android:layout_height="wrap_content" android:id="@+id/control_panel" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:background="#CEE1EE"><include android:layout_height="wrap_content" android:id="@+id/ask_hit_view" layout="@layout/ask_hit" android:layout_width="fill_parent"></include>
<include android:layout_height="wrap_content" android:id="@+id/down_bet_view" layout="@layout/down_bet" android:layout_width="fill_parent"></include>
</FrameLayout><LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/players" android:layout_below="@id/dealer_cards_view" android:layout_above="@id/control_panel">
</LinearLayout>




</RelativeLayout>
